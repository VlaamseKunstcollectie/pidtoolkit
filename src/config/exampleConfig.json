{
  "pid_format": {
    "syntax": "meemoo", // meemoo or oslo
    "types": ["id", "data", "representation", "doc"], // any of these can be left out
    "base_url": "http://www.vlaamsekunstcollectie.be/", // base URL for PIDs
    "concept": "work", // concept to be used when making PIDs
    "path": "/collection/" // additional path elements between the base URL and concept. Ignored if syntax is oslo
  },
  "file": {
    "encoding": "utf-sig-8", //  encoding for the CSV file containing object numbers. Adlib-generated CSV files have the encoding 'utf-8-sig'
    "record_numbers": "record_number", // column containing record ID numbers. This allows easy importing into collection management systems
    "object_numbers": "object_number", // colunm containing object numbers
    "include_adlib_ei": true, // include institution name and date as required for Adlib via ErfgoedInzicht
    "institution_field": true, // institution name from field
    "institution": "institution_name", // column containing institution
    "institution_name": "Vlaamse Kunstcollectie", // institution name to use if institution_field is false
    "department_field": false, // does the institution have departements that should be included with the institution
    "department": "department_name" // column containing department
  },
  "culturize": {
    "arthub_url": "https://arthub.vlaamsekunstcollectie.be/ ", // base URL for the Arthub
    "arthub_lang": "nl", // language variant to use for Arthub
    "datahub_url": "https://datahub.vlaamsekunstcollectie.be/ ", // base URL for the Datahub
    "data_to_datahub": false // should data PID redirect to Datahub instead of Arthub
  }
}